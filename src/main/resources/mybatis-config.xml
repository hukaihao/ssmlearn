<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration  
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="logImpl" value="LOG4J" />
	</settings>
	<!-- 全局别名设置，在映射文件中只需写别名，而不必写出整个类路径 -->
	<typeAliases>
		<typeAlias type="com.devin.ssmlearn.user.dto.UserInfo"
			alias="UserInfo" />
	</typeAliases>
	<mappers>
		<mapper
			resource="com/devin/ssmlearn/user/integration/impl/UserInfoDAOMapper.xml" />
	</mappers>

</configuration>
